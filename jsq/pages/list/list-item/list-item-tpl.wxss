.new-notes{
	border: 0;
	border-radius: 20rpx;
	height: 204rpx;
	width: 258rpx;
	padding: 5rpx;
	margin-top: 12rpx;
}

.style1{
	background-image: linear-gradient(0deg, 
		#ff3300 0%, 
		#ffa710 100%);
}

.style2{
	background-image: linear-gradient(0deg, 
		#ff9900 0%, 
		#fee506 100%, 
		#7f5700 100%);
}

.style3{
	background-image: linear-gradient(0deg, 
		#00b9ff 0%, 
		#10ffb6 100%);
}

.style4{
	background-image: linear-gradient(0deg, 
		#00ff4c 0%, 
		#228772 100%);
}


.new-notes-header{
	width: 100%;
	display:flex ;
}

.new-notes-header-circle{
	border: 0;
	background-color: #ffffff;
	border-radius: 50%;
	width: 30rpx;
	height: 30rpx;
}

.new-notes-header-time{
	height: 25rpx;
	width: 188rpx;
	border: 0;
	border-bottom: 1px solid #ffffff;
	padding: 12rpx 0 0rpx 0rpx;
	margin-left: 10rpx;
	font-family: Segoe UI;
	font-size: 20rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 20rpx;
	letter-spacing: 0px;
	color: #ffffff;
}

.new-notes-header-time-1{
	height: 25rpx;
	width: 188rpx;
	border: 0;
	border-bottom: 1px solid #ffffff;
	padding: 12rpx 0 0rpx 0rpx;
	font-family: Segoe UI;
	font-size: 20rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 20rpx;
	letter-spacing: 0px;
	color: #ffffff;
	margin-left: 30rpx;
	text-align: right;
	margin-right: 10rpx;
}

.new-notes-content{
	height: 130rpx;
	width: 256rpx;
	border: 0;
	border-bottom: 1px solid #ffffff;
	padding-top: 6rpx;
}

.new-notes-content text{
	display: -webkit-box;
	font-size:28rpx;
	line-height: 40rpx;
	-webkit-line-clamp:3;
	overflow: hidden;
    text-overflow:ellipsis;
	word-break: break-all;
    -webkit-box-orient: vertical;
}

.new-notes-footer{
	border: 0;
	padding-top: 6rpx;
	display: flex;
	justify-content: space-between;
	font-family: Segoe UI;
	font-size: 17rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 12rpx;
	letter-spacing: 0px;
	color: #ffffff;
}

.white-block{
	border: 0;
	width: 306rpx;
	height: 54rpx;
}


.new-notes-footer-start,.new-notes-footer-end{
	display: flex;
}


.new-notes{
	padding: 20rpx;
}