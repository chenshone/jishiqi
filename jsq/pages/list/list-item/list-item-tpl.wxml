<template name="newItemTpl-1">

	<view class="line-short-right"></view>
	<view class="new-notes style1" wx:if="{{level==1}}">
		<view class="new-notes-header">
			<view class="new-notes-header-time-1">
				<text>{{startTime}} {{title}}</text>
			</view>
			<view class="new-notes-header-circle"></view>
		</view>
		<view class="new-notes-content">
			<text>{{content}}</text>
		</view>
		<view class="new-notes-footer">
			<view class="new-notes-footer-start">
				<text class="new-notes-footer-start-word">
					开始:
				</text>
				<text class="new-notes-footer-start-countdown">
					{{chooseStartTime}}
				</text>
			</view>

			<view class="new-notes-footer-end">
				<text class="new-notes-footer-end-word">
					结束:
				</text>
				<text class="new-notes-footer-end-countdown">
					{{chooseEndTime}}
				</text>
			</view>
		</view>
	</view>

