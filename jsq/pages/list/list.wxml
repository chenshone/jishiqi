
<import src="list-item/list-item-tpl.wxml" />
<view class="container">
	<view class="date-box">
		<text class="mouthDay">{{dateList[len-1].date}}</text>
		<view class="year-week-box">
			<text class="year">{{dateList[len-1].year}}</text>
			<text class="week">{{dateList[len-1].week}}</text>
		</view>
	</view>
	<view class="line line1"></view>
	<view class="tips">
		<text>事项时轴</text>
	</view>
	<view class="line lin2"></view>
	<view class="zhou">
		<image src="../../images/new/zhou.png" class="zhou-img"></image>
	</view>
	<view class="to-do">
		<view class="to-word">
			<text>今日总计</text>
		</view>
		<view class="todoNum">
			<text>: {{listNum[listNumLen-1].allNum}}</text>
		</view>
	</view>
	<view class="todoDetails">
		<view class="todoDetails-word">
			<text>极其重要</text>
			<text>重要</text>
			<text>一般</text>
			<text>休闲</text>
		</view>
		<view class="todoDetails-num">
			<text>{{listNum[listNumLen-1].aNum}}</text>
			<text>{{listNum[listNumLen-1].bNum}}</text>
			<text>{{listNum[listNumLen-1].cNum}}</text>
			<text>{{listNum[listNumLen-1].dNum}}</text>
		</view>
	</view>
	
	<scroll-view class="content" scroll-y="true">
		<view class="middle">
			<image class="middle-img" src="../../images/new/local.png"></image>
		</view>
		<view class = "content-body">
			<block wx:for="{{dateList[len-1].things}}" wx:for-item="item" wx:for-index="index">
				<view class="view-left" wx:if="{{index==0}}">
					<template is="newItemTpl-2" data="{{...item}}"></template>
				</view>
				<view class="view-right pad" wx:elif="{{index==1}}">
					<template is="newItemTpl-1" data="{{...item}}"></template>
				</view>
				<view class="view-left remar" wx:elif="{{index%2==0}}">
					<template is="newItemTpl-2" data="{{...item}}"></template>
				</view>
				<view class="view-right" wx:else>
					<template is="newItemTpl-1" data="{{...item}}"></template>
				</view>
			</block>
		</view>
	</scroll-view>
	
	<view class="footer">
		<image class="button-new" src="../../images/new/input.png"></image>
	</view>
</view>
