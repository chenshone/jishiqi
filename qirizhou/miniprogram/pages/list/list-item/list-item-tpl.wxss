.view-left {
	width: 46%;
	height: 310rpx;
	border: 0;
	border-left: 2rpx solid #ffffff;
	padding: 10rpx 0 0 26rpx;
}

.view-right {
	width: 46%;
	height: 310rpx;
	border: 0;
	border-right: 2rpx solid #ffffff;
	padding: 10rpx 16rpx 0 0;
	margin-right: -1rpx;
}

.line-short-left {
	border: 0;
	background-color: #ffffff;
	height: 1px;
	width: 118rpx;
	margin-bottom: 4rpx;
	margin-left: -25rpx;
}

.line-short-right {
	border: 0;
	background-color: #ffffff;
	height: 1px;
	width: 118rpx;
	margin-left: 206rpx;
	margin-bottom: 4rpx;
}

.new-notes {
	border: 0;
	border-radius: 20rpx;
	height: 204rpx;
	width: 258rpx;
	padding: 5rpx;
	margin-top: 12rpx;
}

.style1 {
	background-image: linear-gradient(0deg,
		#ffa710 0%,
		#ff3300 100%);
}

.style2 {
	background-image: linear-gradient(0deg,
		#fee506 0%,
		#ff9900 100%);
}

.style3 {
	background-image: linear-gradient(0deg,
		#10ffb6 0%,
		#00b9ff 100%);
}

.style4 {
	background-image: linear-gradient(0deg,
		#00ff4c 0%,
		#228772 100%);
}


.new-notes-header {
	width: 100%;
	display: flex;
}

.new-notes-header-circle {
	border: 4rpx solid hsla(0, 0%, 100%, 0);
	background-color: #ffffff;
	background-clip: padding-box;
	border-radius: 50%;
	width: 30rpx;
	height: 30rpx;
}

.new-notes-header-time {
	height: 25rpx;
	width: 188rpx;
	border: 0;
	border-bottom: 1px solid #ffffff;
	padding: 12rpx 0 0rpx 0rpx;
	margin-left: 10rpx;
	font-family: Segoe UI;
	font-size: 20rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 20rpx;
	letter-spacing: 0px;
	color: #ffffff;
}

.new-notes-header-time-1 {
	height: 25rpx;
	width: 188rpx;
	border: 0;
	border-bottom: 1px solid #ffffff;
	padding: 12rpx 0 0rpx 0rpx;
	font-family: Segoe UI;
	font-size: 20rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 20rpx;
	letter-spacing: 0px;
	color: #ffffff;
	margin-left: 30rpx;
	text-align: right;
	margin-right: 10rpx;
}

.new-notes-header-time,
.new-notes-header-time-1 {
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}

.new-notes-content {
	height: 130rpx;
	width: 256rpx;
	border: 0;
	border-bottom: 1px solid #ffffff;
	padding-top: 6rpx;
	color: #FFFFFF;
}

.new-notes-content text {
	display: -webkit-box;
	font-size: 28rpx;
	line-height: 40rpx;
	-webkit-line-clamp: 3;
	overflow: hidden;
	text-overflow: ellipsis;
	word-break: break-all;
	-webkit-box-orient: vertical;
}

.new-notes-footer {
	border: 0;
	padding-top: 6rpx;
	display: flex;
	justify-content: space-between;
	font-family: Segoe UI;
	font-size: 17rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 12rpx;
	letter-spacing: 0px;
	color: #ffffff;
}

.new-notes-footer-start-countdown,
.new-notes-footer-end-countdown {
	font-weight: bold;
}

.white-block {
	border: 0;
	width: 306rpx;
	height: 54rpx;
}


.new-notes-footer-start,
.new-notes-footer-end {
	display: flex;
	font-size: 22rpx;
}


.new-notes {
	padding: 20rpx;
}


.isfinished {
	background-image: linear-gradient(0deg,
		#DBDBDB 0%,
		#909394 100%);
}


.isfinished-circle-1 {
	border: 4rpx solid #ff3434;
	background-clip: border-box;
}

.isfinished-circle-2 {
	border: 4rpx solid #f9c85c;
	background-clip: border-box;
}

.isfinished-circle-3 {
	border: 4rpx solid #44cef6;
	background-clip: border-box;
}

.isfinished-circle-4 {
	border: 4rpx solid #00bc12;
	background-clip: border-box;
}
