@import "history-item-tpl/history-item-tpl.wxss";
page{
  padding-bottom: 50rpx;
}
.header {
  width: 100%;
  height: 388rpx;
  background-image: linear-gradient(0deg, #9deebd 0%, #469de0 100%);
  box-shadow: 0px 3px 6px 0px rgba(0, 0, 0, 0.2);
}

.header-backbotton {
  display: flex;
  justify-content: space-between;
  padding-top: 52rpx;
  height: 80rpx;
  line-height: 80rpx;
}

.header-backbotton-option {
  width: 80rpx;
  height: 80rpx;
}

.header-backbotton-tittle {
  color: white;
  font-size: 50rpx;
}

.empty {
  width: 80rpx;
}

.header-mainline {
  display: flex;
  justify-content: flex-start;
  margin-left: 36rpx;
  margin-top: 30rpx;
}

.header-mainline-pic {
  width: 154rpx;
  height: 154rpx;
	border-radius: 50%;
}

.header-mainline-name {
  display: flex;
  flex-direction: column;
  margin-left: 32rpx;
  justify-content: space-around;
}

.header-mainline-name-option-first {
  color: white;
  font-size: 50rpx;
	width: 440rpx;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}

.header-mainline-name-option-second {
  color: white;
  font-size: 40rpx;
}

